<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    tools:context=".MainActivity"
    android:layout_margin="8dp"
    android:background="@drawable/blue"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView

        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/testt" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tense Type :   "
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/photo"

        android:id="@+id/text"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/text"


        />


    <Button
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginTop="7dp"
        android:backgroundTint="#0096FF"
        android:textStyle="bold"
        android:text="Click Here"
        android:onClick="btnonclick"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.I _____ to the mall after school."
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/first"
        android:layout_below="@id/click"


        />

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/first"
        android:id="@+id/radio1"
        >
        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goed"
            android:textSize="15sp"
            android:textStyle="bold"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_below="@id/checkBox"
            android:text="Went"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. My brother _____ a bear an hour ago."
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/second"
        android:layout_below="@id/radio1"

        />
    <RadioGroup
        android:id="@+id/radio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/second"
        >
        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second"
            android:text="Saw"
            android:textSize="15sp"
            android:checked="false"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check2"
            android:text="Seen"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. _____ Mike visit his grandmother last night?"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/Third"
        android:layout_below="@id/radio2"

        />
    <RadioGroup
        android:id="@+id/radio3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/Third"
        >

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Third"
            android:text="Did"
            android:textSize="15sp"
            android:checked="false"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/check5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check4"
            android:text="Do"
            android:textSize="15sp"
            android:checked="false"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. They never __________ Maths."
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/fourth"
        android:layout_below="@id/radio3"


        />
    <RadioGroup
        android:id="@+id/radio4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/fourth"
        >

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/check6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fourth"
            android:text="Study"
            android:textSize="15sp"
            android:checked="false"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/check7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check6"
            android:text="Studies"
            android:textSize="15sp"
            android:checked="false"
            android:textStyle="bold" />

    </RadioGroup>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Emilia ____________ every evening."
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/five"
        android:layout_below="@id/radio4"
        />
    <RadioGroup
        android:id="@+id/radio5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/five"
        >

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/check8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/five"
            android:text="Washes up"
            android:textSize="15sp"
            android:checked="false"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/check9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check8"
            android:text="Wash ups"
            android:textSize="15sp"
            android:checked="false"
            android:textStyle="bold" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. My parents ________ work on Saturdays."
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/sixth"
        android:layout_below="@id/radio5"


        />

    <RadioGroup
        android:id="@+id/radio6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/sixth"
        >

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/check10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sixth"
            android:text="Isn't"
            android:textSize="15sp"
            android:checked="false"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/check11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check10"
            android:text="Don't"
            android:textSize="15sp"
            android:checked="false"
            android:textStyle="bold" />

    </RadioGroup>

    <Button
        android:id="@+id/getscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/spinner"
        android:layout_toRightOf="@+id/click"
        android:layout_marginTop="3dp"
        android:backgroundTint="#0096FF"
        android:text="Get Score"
        android:layout_marginLeft="15dp"
        android:onClick="btnonclickk"
        />


    <EditText
        android:id="@+id/finall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/click"
        android:layout_marginTop="190pt"
        android:textSize="20sp"
        android:textStyle="bold"
        />



</RelativeLayout>
